<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Setting">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="160dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:background="@drawable/walk_setting"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="48dp"
                android:layout_height="32dp"
                android:text="左转"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/left_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="6"
                />
            <TextView
                android:layout_width="48dp"
                android:layout_height="32dp"
                android:text="右转"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/right_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="6"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="48dp"
                android:layout_height="32dp"
                android:text="前进"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/forward_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="6"
                />
            <TextView
                android:layout_width="48dp"
                android:layout_height="32dp"
                android:text="后退"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/back_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="6"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="48dp"
                android:layout_height="32dp"
                android:text="左前"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/leftforward_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="6"
                />
            <TextView
                android:layout_width="48dp"
                android:layout_height="32dp"
                android:text="右前"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/rightforward_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="6"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="48dp"
                android:layout_height="32dp"
                android:text="左后"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/leftback_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="6"
                />
            <TextView
                android:layout_width="48dp"
                android:layout_height="32dp"
                android:text="右后"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/rightback_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="6"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="160dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:background="@drawable/machinery_setting"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="48dp"
                android:layout_height="32dp"
                android:text="上升"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/machinery_up_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="6"
                />
            <TextView
                android:layout_width="48dp"
                android:layout_height="32dp"
                android:text="下降"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/machinery_down_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="6"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:gravity="center">

            <TextView
                android:layout_width="48dp"
                android:layout_height="32dp"
                android:text="停止"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/machinery_stop_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="7"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="160dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:background="@drawable/camera_holder_setting"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="48dp"
                android:layout_height="32dp"
                android:text="上升"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/camera_up_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="6"
                />
            <TextView
                android:layout_width="48dp"
                android:layout_height="32dp"
                android:text="下降"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/camera_down_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="6"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="48dp"
                android:layout_height="32dp"
                android:text="左转"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/camera_left_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="6"
                />
            <TextView
                android:layout_width="48dp"
                android:layout_height="32dp"
                android:text="右转"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/camera_right_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="6"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="160dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:background="@drawable/smartandvideo_setting"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="64dp"
                android:layout_height="32dp"
                android:text="IP地址"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/IP_address_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="6"
                />
            <TextView
                android:layout_width="48dp"
                android:layout_height="32dp"
                android:text="端口"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/port_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="6"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:gravity="center">

            <TextView
                android:layout_width="96dp"
                android:layout_height="32dp"
                android:text="自动控制启动"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/auto_start_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="20"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:gravity="center">

            <TextView
                android:layout_width="96dp"
                android:layout_height="32dp"
                android:text="自动控制停止"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/auto_stop_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="20"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:gravity="center">

            <TextView
                android:layout_width="64dp"
                android:layout_height="32dp"
                android:text="视频地址"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/video_address_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="20"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="80dp"
            android:paddingRight="80dp">

            <Button
                android:id="@+id/setting_back_button"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_alignParentLeft="true"
                android:text="返回"
                android:textSize="16sp"
                android:textColor="@color/colorAccent"
                android:background="@drawable/setting_background_button_selector"/>
            <Button
                android:id="@+id/setting_save_button"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_alignParentRight="true"
                android:text="保存"
                android:textSize="16sp"
                android:textColor="@color/colorAccent"
                android:background="@drawable/setting_background_button_selector"/>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>